<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chooseOpponentListItemLayout">

    <TextView
        android:id="@+id/opponentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/playerWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/opponentName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/underScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/playerWin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="-"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/opponentWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/underScore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>